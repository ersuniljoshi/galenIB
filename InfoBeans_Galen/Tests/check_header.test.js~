test("Test on a Desktop for homepage", function(device, browser) {
	//var browser = System.getProperty("browser");
	//console.log(browser);
	var driver = createDriver("http://www.infobeans.com/", "1866x1000", "chrome");
	
	checkLayout(driver, "check_header.gspec", "desktop");
	driver.quit();
});
test("Test on a Desktop for automation engineering page", function(device, browser) {
	var driver = createDriver("http://www.infobeans.com/services/automation-engineering", "1866x1000", "chrome");
	
	checkLayout(driver, "auto.gspec", "desktop");
	driver.quit();
});
